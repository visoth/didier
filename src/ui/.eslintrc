{
  "parser": "babel-eslint",
   "extends": [
   "standard",
   "standard-jsx",
   "plugin:flowtype/recommended"
   ],
  "plugins": [
    "babel",
    "react",
    "promise",
    "flowtype"
  ],
  "env": {
    "browser" : true
  },
  "globals": {
    "__DEV__"      : false,
    "__TEST__"     : false,
    "__PROD__"     : false,
    "__COVERAGE__" : false
  },
  "rules": {
    "key-spacing"          : 0,
    "jsx-quotes"           : [2, "prefer-single"],
    "max-len"              : [2, 120, 2],
    "object-curly-spacing" : [2, "always"],
    "no-undef"             : 1,
    "no-duplicate-imports" : 0
  }
}
